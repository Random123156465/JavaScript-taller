<h4> Punto 4 </h4>

<script>
var num = prompt(&quot;Ingrese un Numero, PUNTO CUATRO &quot;)
 
var factorial = function(n) {
    if(n == 0) {
        return 1
    } else {
        return n * factorial(n - 1);
    }
}
 
console.log(factorial(num));

 
</script>
